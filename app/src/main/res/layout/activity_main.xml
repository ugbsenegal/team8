<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back2"
    android:padding="20dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        android:id="@+id/cl"
        android:background="@drawable/rounded_border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samedi 13 Avril 2019"
            android:id="@+id/date"
            app:layout_constraintTop_toTopOf="@id/cl"
            app:layout_constraintRight_toRightOf="@id/cl"
            app:layout_constraintLeft_toLeftOf="@id/cl"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.5"
            android:text="--\u2103"
            android:textSize="100sp"
            android:id="@+id/temperature"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintRight_toRightOf="@id/cl"
            app:layout_constraintLeft_toLeftOf="@id/cl"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max : "
            android:id="@+id/max"
            app:layout_constraintRight_toRightOf="@id/cl"
            app:layout_constraintLeft_toLeftOf="@id/cl"
            app:layout_constraintTop_toBottomOf="@id/temperature"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--\u00B0"
            android:id="@+id/tmpmax"
            app:layout_constraintTop_toBottomOf="@id/temperature"
            app:layout_constraintLeft_toRightOf="@id/max"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min : "
            android:id="@+id/min"
            app:layout_constraintLeft_toRightOf="@id/tmpmax"
            app:layout_constraintTop_toBottomOf="@id/temperature"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--\u00B0"
            android:id="@+id/tmpmin"
            app:layout_constraintTop_toBottomOf="@id/temperature"
            app:layout_constraintLeft_toRightOf="@id/min"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/cl"
            app:layout_constraintTop_toBottomOf="@id/max"
            android:id="@+id/details"
            android:text="Plus details" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lundi"
        app:layout_constraintTop_toBottomOf="@id/cl"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorText"
        android:id="@+id/jour1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--°C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/maxjour1"
        app:layout_constraintTop_toBottomOf="@id/cl"
        android:textColor="@color/colorText"
        android:id="@+id/minjour1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl"
        android:text="--°C"
        android:id="@+id/maxjour1"
        android:textColor="@color/colorText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mardi"
        app:layout_constraintTop_toBottomOf="@id/jour1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorText"
        android:id="@+id/jour2"
        android:layout_marginTop="@dimen/margin_bottom"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--°C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minjour1"
        android:textColor="@color/colorText"
        android:id="@+id/minjour2"
        android:layout_marginTop="@dimen/margin_bottom"/>

      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toBottomOf="@id/maxjour1"
         android:text="--°C"
         android:id="@+id/maxjour2"
         android:textColor="@color/colorText"
         android:layout_marginTop="@dimen/margin_bottom"/>

    <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Mercredi"
     app:layout_constraintTop_toBottomOf="@id/jour2"
     app:layout_constraintLeft_toLeftOf="parent"
     android:textColor="@color/colorText"
     android:id="@+id/jour3"
     android:layout_marginTop="@dimen/margin_bottom"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="--°C"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/minjour2"
    android:textColor="@color/colorText"
    android:id="@+id/minjour3"
    android:layout_marginTop="@dimen/margin_bottom"/>

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/maxjour2"
       android:text="--°C"
       android:id="@+id/maxjour3"
       android:textColor="@color/colorText"
       android:layout_marginTop="@dimen/margin_bottom"/>

    <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Jeudi"
     app:layout_constraintTop_toBottomOf="@id/jour3"
     app:layout_constraintLeft_toLeftOf="parent"
     android:textColor="@color/colorText"
     android:id="@+id/jour4"
     android:layout_marginTop="@dimen/margin_bottom"/>

     <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="--°C"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@id/minjour3"
     android:textColor="@color/colorText"
     android:id="@+id/minjour4"
     android:layout_marginTop="@dimen/margin_bottom"/>

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/maxjour3"
       android:text="--°C"
       android:id="@+id/maxjour4"
       android:textColor="@color/colorText"
       android:layout_marginTop="@dimen/margin_bottom"/>

    <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Vendredi"
     app:layout_constraintTop_toBottomOf="@id/jour4"
     app:layout_constraintLeft_toLeftOf="parent"
     android:textColor="@color/colorText"
     android:id="@+id/jour5"
     android:layout_marginTop="@dimen/margin_bottom"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="--°C"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/minjour4"
    android:textColor="@color/colorText"
    android:id="@+id/minjour5"
    android:layout_marginTop="@dimen/margin_bottom"/>


    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/maxjour4"
       android:text="--°C"
       android:id="@+id/maxjour5"
       android:textColor="@color/colorText"
       android:layout_marginTop="@dimen/margin_bottom"/>








































    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Heures de priere"/>

</android.support.constraint.ConstraintLayout>